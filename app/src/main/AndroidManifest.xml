<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.surelynotadndapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SurelyNotADndApp">
        <activity
            android:name=".FightScreen"
            android:exported="false" />
        <activity
            android:name=".monsterdataScreen.MonsterDetails"
            android:exported="false" />
        <activity
            android:name=".monsterdataScreen.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".monsterdataScreen.MonsterDataScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_monster_data_screen"
            android:theme="@style/Theme.SurelyNotADndApp.Fullscreen" />
        <activity
            android:name=".monsterdataScreen.ScrollingActivity"
            android:exported="false"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/Theme.SurelyNotADndApp.NoActionBar" />
        <activity
            android:name=".MonsterCreatorScreen"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>